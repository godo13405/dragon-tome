{
  "name": "dragon-tome",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "NODE_ENV=dev npx nodemon",
    "serve": "ssh -o ServerAliveInterval=60 -R spellbook:80:localhost:8080 serveo.net",
    "serve-ngrok": "./ngrok http 80",
    "mocha": "mocha spec",
    "box": "docker stop $(docker ps -a -q) && docker-compose -f docker-compose-all.yml up",
    "test-core": "botium-cli run --config ./botium.json --convos ./spec/convo/core",
    "test-entity": "botium-cli run --config ./botium.json --convos ./spec/convo/entity",
    "test": "botium-cli run --config ./botium.json --convos ./spec/convo/",
    "emulate": "botium-cli emulator console --convos ./spec/convo --config ./botium.json",
    "emulate-browser": "botium-cli emulator browser --convos ./spec/convo --config ./botium.json",
    "build": "gcloud builds submit",
    "test-gen": "node ./test/generate-tests.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/godo13405/dragon-tome.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/godo13405/dragon-tome/issues"
  },
  "homepage": "https://github.com/godo13405/dragon-tome#readme",
  "devDependencies": {
    "eslint": "^5.13.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "botium-cli": "0.0.45",
    "botium-bindings": "latest",
    "botium-connector-echo": "latest"
  },
  "botium": {
    "convodirs": [
      "spec/convo"
    ],
    "expandConvos": true,
    "expandUtterancesToConvos": false
  }
}